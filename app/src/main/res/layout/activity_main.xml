<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conversion_entre_escalas_de_temperaturas"
        android:textAlignment="center"
        android:fontFamily="casual"
        tools:ignore="MissingConstraints" />

    <!--PARTE 1-->
    <SeekBar
        android:id="@+id/seekbar1"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitulo"
        android:max="2"
        android:progress="0"
        android:layout_centerHorizontal="true"
        android:scrollbarDefaultDelayBeforeFade="2"
        />

    <!--Texto para el seekbar-->
    <TextView
        android:id="@+id/txtMin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celsius"
        android:textAlignment="center"
        android:layout_below="@id/txtTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtMax1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farenheit"
        android:textAlignment="center"
        android:layout_below="@id/txtTitulo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtMid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelvin"
        android:textAlignment="center"
        android:layout_below="@id/txtTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/edittxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMid1"
        android:layout_centerHorizontal="true"
        android:hint="Introduce la temperatura"/>

    <!--PARTE 2-->
    <SeekBar
        android:id="@+id/seekbar2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittxt1"
        android:max="2"
        android:progress="1"
        android:layout_centerHorizontal="true"
        />

    <!--Texto para el seekbar-->
    <TextView
        android:id="@+id/txtMin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celsius"
        android:textAlignment="center"
        android:layout_below="@id/seekbar2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtMax2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farenheit"
        android:textAlignment="center"
        android:layout_below="@id/seekbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtMid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelvin"
        android:textAlignment="center"
        android:layout_below="@id/seekbar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/edittxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMid2"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>